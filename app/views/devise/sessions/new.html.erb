<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <div class="field">
    <%= f.label :email, class: "block mar-b-1" %>
    <%= f.email_field :email, autofocus: true, class: "block w-100 no-outline no-border pad-1 mar-b-2" %>
  </div>

  <div class="field">
    <%= f.label :password, class: "block mar-b-1" %>
    <%= f.password_field :password, autocomplete: "off", class: "block w-100 no-outline no-border pad-1 mar-b-2" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "Log in", class: "block button w-100 mar-t-4 mar-b-3 pad-2 round-1 text-c center no-border no-outline"  %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
