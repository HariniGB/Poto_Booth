<div class="bg-white">
<h2>Forgot your password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= devise_error_messages! %>
  <br />
  <div class="field">
    <%= f.label :email, class: "block mar-b-1" %>
    <%= f.email_field :email, autofocus: true, class: "block w-100 no-outline no-border pad-1 mar-b-2" %>
  </div>
  <br />
  <div class="actions">
    <%= f.submit "Send me reset password instructions", class: "block button w-100 mar-t-4 mar-b-3 pad-2 round-1 text-c center no-border no-outline" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
